<%- include('../partials/header') %>
<main>
    <div class="container" style="max-width:400px;margin:40px auto;">
        <h2>Verify Password Change OTP</h2>
        <% if (error) { %>
            <div style="color:red;"><%= error %></div>
        <% } %>
        <form action="/verify-password-otp" method="POST">
            <input type="hidden" name="email" value="<%= email %>">
            <div>
                <label for="otp">Enter OTP</label>
                <input type="text" id="otp" name="otp" required>
            </div>
            <button type="submit">Verify OTP</button>
        </form>
        <form id="resendForm" action="/resendOTP" method="POST" style="margin-top:10px;">
            <input type="hidden" name="email" value="<%= email %>">
            <button type="submit">Resend OTP</button>
        </form>
    </div>
</main>
<%- include('../partials/footer') %>
